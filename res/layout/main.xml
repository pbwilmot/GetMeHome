<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:orientation="vertical"  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent"  
    android:gravity="center_horizontal" android:weightSum="1">
    <TextView android:layout_width="fill_parent" 
    	android:text="" 
    	android:layout_height="wrap_content" 
    	android:layout_weight="0.10" 
    	android:textSize="25dp" 
    	android:id="@+id/PhotoLabel" 
    	android:gravity="center|center_horizontal"></TextView>
    <ImageView android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"  
        android:scaleType="fitXY"  
        android:maxHeight="300dp"  
        android:maxWidth="199dp"
        android:id="@+id/Photo"/>
		<LinearLayout orientation="horizontal" android:id="@+id/LinearLayout03" android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="right">
			<TextView android:id="@+id/travelTime" 
				android:text="\?" 
				android:layout_height="wrap_content" 
				android:gravity="center_horizontal" 
				android:layout_width="0dip" 
				android:layout_weight="1" 
				android:layout_gravity="center_horizontal" 
				android:textSize="25dp"></TextView>
			<TextView android:id="@+id/travelCost" 
				android:text="\?" 
				android:layout_height="wrap_content" 
				android:gravity="center_horizontal" 
				android:layout_width="0dip" 
				android:layout_weight="1" 
				android:layout_gravity="center_horizontal" 
				android:textSize="25dp"></TextView>
		</LinearLayout>
		<Button android:layout_weight="0.10" android:layout_height="wrap_content" android:id="@+id/button1" android:text="GO!" android:textSize="25dp" android:layout_width="100dp" android:layout_marginTop="40dp"></Button>
</LinearLayout>